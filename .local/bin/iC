#!/usr/bin/env bash

echo "iCheck is running..."

while true; do
    if iChecker; then
        date -Iseconds | tr -d '\n'
        echo ,1
        if [ -z "$@" ]; then
            :
        else
            alarm "Internet is up"
        fi
    else
        date -Iseconds | tr -d '\n'
        echo ,0
    fi
    sleep 3
done
