#!/usr/bin/env sh

FZFCOMMAND='fzf --height 40'
RGCOMMAND='rg --files --hidden --no-ignore --color never --line-buffered --iglob !.git/* --iglob !*cache*'
if (type rg >/dev/null 2>&1); then
    if [ -z "$@" ]; then
        $RGCOMMAND 2>/dev/null | $FZFCOMMAND
    else
        $RGCOMMAND -g "$@" 2>/dev/null | $FZFCOMMAND
    fi
else
	find . -type f -regex "$@" | $FZFCOMMAND
fi
