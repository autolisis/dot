#!/usr/bin/env sh

powerpill=true
sudo=sudo

PACMANPATHS=$(which -a pacman)
SPLIT=($PACMANPATHS)
# Assuming this binary is under the first path, then
# we let's find the second path
PACMAN="${SPLIT[1]}"

if (type powerpill > /dev/null 2>&1); then
    if [ "$powerpill" = true ]; then
        $sudo powerpill "$@"
    else
        $sudo "$PACMAN" "$@"
    fi
else
    $sudo "$PACMAN" "$@"
fi
